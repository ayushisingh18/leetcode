//476.Number complement
class Solution {
public:
    int findComplement(int num) {
        if(num==0)
        {
            return 1;
        }
        unsigned int mul=1; 
        int ans=0,rem;
        while(num)
        {
            rem=num%2;
            rem=rem^1;
            num/=2;
            ans=ans+rem*mul;
            mul*=2;
        }
        return ans;
    }
};
